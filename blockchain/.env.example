# Blockchain Environment Variables
# Copy this file to .env and fill in your values

# Wallet private key for deployment (DO NOT commit this to version control)
PRIVATE_KEY=your_private_key_here

# Polygon Mumbai testnet RPC URL
MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com

# Polygon mainnet RPC URL (for production)
POLYGON_RPC_URL=https://polygon-rpc.com

# PolygonScan API key for contract verification
POLYGONSCAN_API_KEY=your_polygonscan_api_key

# Enable gas reporting (set to "true" to enable)
REPORT_GAS=false

# Platform treasury wallet address
PLATFORM_TREASURY=your_platform_treasury_address

# IPFS node URL (local or remote)
IPFS_NODE_URL=http://localhost:5001

# Database Configuration (NeonDB PostgreSQL)
NEONDB_CONNECTION_STRING=your_neondb_connection_string_here

# API keys for external services
EXCHANGE_API_KEY=your_crypto_exchange_api_key
UPI_GATEWAY_KEY=your_upi_gateway_key
BANK_API_KEY=your_bank_api_key

# Frontend API base URL
API_BASE_URL=http://localhost:3000

# JWT secret for authentication
JWT_SECRET=your_jwt_secret_here

# Email service configuration
EMAIL_SERVICE_API_KEY=your_email_service_key
EMAIL_FROM=noreply@bluecarbonmrv.org

# SMS service for mobile notifications
SMS_API_KEY=your_sms_api_key

# File upload limits
MAX_FILE_SIZE=50MB
MAX_FILES_PER_PROJECT=100

# Verification thresholds
MIN_COMMUNITY_DATA_POINTS=3
MIN_SATELLITE_DATA_POINTS=2
MIN_DRONE_DATA_POINTS=1
VERIFICATION_THRESHOLD_PERCENT=70

# Payment configuration
DEFAULT_PLATFORM_FEE_PERCENT=2.5
COMMUNITY_SHARE_PERCENT=60
NGO_SHARE_PERCENT=20
VERIFIER_SHARE_PERCENT=15

# Supported languages for mobile app
SUPPORTED_LANGUAGES=en,hi,ta,bn,te,mr,gu

# Rate limiting
API_RATE_LIMIT_PER_MINUTE=100
FILE_UPLOAD_RATE_LIMIT_PER_HOUR=50
